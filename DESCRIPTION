Package: jupycost
Title: Monitor costs and usage of AWS-hosted 2i2c JupyterHubs
Version: 0.0.0.9000
Authors@R: c(
    person("Andy", "Teucher", , "andy.teucher@gmail.com", role = c("aut", "cre"), 
           comment = c(ORCID = "0000-0002-7840-692X")),
    person("Openscapes LLC", role = "cph")
